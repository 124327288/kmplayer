<smil>
  <head>
    <layout>
      <root-layout width="320" height="240" background-color="yellow"/>
      <region id="reg_but1" left="5" top="15" width="80" height="40" background-color="red"/>
      <region id="reg_but2" left="5" top="65" width="80" height="40" background-color="red"/>
      <region id="reg_but3" left="5" top="115" width="80" height="40" background-color="red"/>
      <region id="reg_but4" left="5" top="175" width="80" height="40" background-color="red"/>
      <region left="95" top="15" width="210" height="210" background-color="blue">
        <region id="reg_img" left="5" top="5" width="64" height="64" background-color="orange"/>
      </region>
    </layout>
  </head>
  <body>
    <par end="but4.activateEvent">
      <text src="data:,Horizontal" id="but1" region="reg_but1" fill="freeze">
        <param name="fontColor" value="yellow"/>
        <param name="fontSize" value="+1"/>
        <param name="backgroundColor" value="blue"/>
      </text>
      <set targetElement="but1" attributeName="backgroundColor" to="red" begin="but1.activateEvent" dur="0.1"/>
      <text src="data:,Vertical" id="but2" region="reg_but2" fill="freeze">
        <param name="fontColor" value="yellow"/>
        <param name="fontSize" value="+1"/>
        <param name="backgroundColor" value="blue"/>
      </text>
      <set targetElement="but2" attributeName="backgroundColor" to="red" begin="but2.activateEvent" dur="0.1"/>
      <text src="data:,Diagonal" id="but3" region="reg_but3" fill="freeze">
        <param name="fontColor" value="yellow"/>
        <param name="fontSize" value="+1"/>
        <param name="backgroundColor" value="blue"/>
      </text>
      <set targetElement="but3" attributeName="backgroundColor" to="red" begin="but3.activateEvent" dur="0.1"/>
      <text src="data:,Stop" id="but4" region="reg_but4" fill="freeze">
        <param name="fontColor" value="green"/>
        <param name="fontSize" value="+1"/>
        <param name="backgroundColor" value="red"/>
      </text>
      <img src="../icons/hi64-app-kmplayer.png" region="reg_img" fill="freeze" fit="meet"/>
      <excl dur="indefinite">
        <animate targetElement="reg_img" attributeName="left" from="5" to="140" begin="but1.activateEvent" dur="2" fill="freeze"/>
        <animate targetElement="reg_img" attributeName="top" from="5" to="140" begin="reg_but2.activateEvent" dur="2" fill="freeze"/>
        <par begin="reg_but3.activateEvent">
          <animate targetElement="reg_img" attributeName="left" from="5" to="140" dur="2" fill="freeze"/>
          <animate targetElement="reg_img" attributeName="top" from="5" to="140" dur="2" fill="freeze"/>
        </par>
      </excl>
    </par>
  </body>
</smil>
