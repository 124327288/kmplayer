<!-- test for mouse events, region z-index changes when entering the red region -->
<smil>
  <head>
    <layout>
      <root-layout width="320" height="240" background-color="green"/>
      <region id="region1" left="5%" top="10%" right="50%" bottom="40%" z-index="2"/>
      <region id="region2" left="35%" top="40%" right="40%" bottom="5%" z-index="3" background-color="red"/>
      <region id="region3" z-index="1"/>
      <region id="region4" left="65%" top="10%" right="10%" bottom="70%" z-index="2" background-color="purple"/>
      <region id="region5" left="65%" top="35%" right="10%" bottom="50%" z-index="2" background-color="red"/>
    </layout>
  </head>
  <body>
    <par>
      <text id="text1" src="data:,move%20here" region="region1" dur="10">
        <param name="fontColor" value="yellow"/>
        <param name="fontSize" value="+2"/>
        <param name="backgroundColor" value="blue"/>
      </text> 
      <set targetElement="region1" attributeName="z-index" to="4" begin="text1.inBoundsEvent" end="text1.outOfBoundsEvent"/>
      <text id="text2" src="data:,click%20me" left="5" right="5" region="region4" dur="10" bottom="15">
        <param name="fontColor" value="red"/>
        <param name="fontSize" value="+1"/>
        <param name="backgroundColor" value="orange"/>
      </text> 
      <text src="data:,clicked" region="region5" begin="text2.activateEvent" dur="0.5">
      </text> 
    </par>
    <par>
      <set targetElement="region2" attributeName="z-index" to="6"/>
      <set targetElement="region2" attributeName="right" to="20%"/>
      <set targetElement="region3" attributeName="background-color" to="black"/>
      <set targetElement="region3" attributeName="z-index" to="5"/>
      <text src="data:,that's all folks" region="region2" dur="2">
        <param name="fontColor" value="green"/>
        <param name="fontSize" value="+2"/>
        <param name="backgroundColor" value="black"/>
      </text> 
    </par>
  </body>
</smil>
